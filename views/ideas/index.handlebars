{{#each ideas}}
<div class="card card-body mb-2">
    <h2>{{title}}</h2>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{_id}}" class="btn btn-dark btn-block">Edit</a>
    <form action="/ideas/delete/{{_id}}?_method=DELETE" method="post">
     <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="DELETE">
    </form>
</div>
{{else}}
<p>No idea was found</p>
{{/each}}